@using WebUI.Models
@model Products
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}
<div class="all-content-wrapper">
    <div class="single-product-tab-area mg-b-30">
        <!-- Single pro tab review Start-->
        <div class="single-pro-review-area">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="review-tab-pro-inner">
                            <ul id="myTab3" class="tab-review-design">
                                <li><a href="#INFORMATION"><i class="icon nalika-chat" aria-hidden="true"></i>Create New Category</a></li>
                            </ul>
                            <div id="myTabContent" class="tab-content custom-product-edit">
                                <div class="product-tab-list tab-pane fade active in" id="description">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="review-content-section">
                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"></span>
                                                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                                                        <div>
                                                            <label asp-for="Photo">Select Photo</label>
                                                            <input asp-for="Photo" class="form-control">
                                                            <span class="text-danger" asp-validation-for="Photo"></span>
                                                            <input type="text" asp-for="Name" class="form-control" name="Name" placeholder="Product Name">
                                                            <input type="text" asp-for="Price" class="form-control" name="Price" placeholder="Price">
                                                            <select name="colorId">
                                                                @foreach (Colors item in ViewBag.colors)
                                                                {
                                                                    <option value="@item.Id">@item.Name</option>
                                                                }
                                                            </select>
                                                            <span class="text-danger" asp-validation-for="Colors"></span>

                                                        </div>
                                                        <div class="row">
                                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                                <div class="text-center custom-pro-edt-ds">
                                                                    <button method="post" type="submit" style="background-color:red" class="btn btn-ctl-bt waves-effect waves-light m-r-10">
                                                                        Save
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-copyright-area">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="footer-copy-right">
                            <p>Copyright © 2018 <a href="https://colorlib.com/wp/templates/">Colorlib</a> All rights reserved.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


